<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
   <a href= "/profile/chooseAnimal">Create a New Post </a>

 

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Your Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
      </div>
     
      <div class="col-md-4">
        <a href = "/profile/edit/{{post.id}}">
        UPDATE
        </a>
        <button class="btn btn-sm btn-danger delete" data-id="{{post.id}}">DELETE</button>
        
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>


