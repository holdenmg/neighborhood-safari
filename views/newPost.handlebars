<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-location">Location:</label>
        <input class="form-input" type="text" id="post-location" name="post-location" />
      </div>
       <div class="form-group">
        <label for="post-danger">Is there danger to people or property? (yes/no):</label>
        <input class="form-input" type="text" id="post-danger" name="post-danger" />
      </div>
       <div class="form-group">
      </div>
      <div class="form-group">
        <label for="post-desc">Text:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a href = '/profile'> Cancel</a>
      </div>
    </form>
  </div>


  <script src="/js/profile.js"></script>